@model IEnumerable<Book_MVCwebApp.Models.Book>

<p>
    @Html.ActionLink("Create New", "AddBookData")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.BookId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AuthorName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BookDescription)
    </td>
    <td>
        @Html.ActionLink("Edit", "EditData", new { id = item.BookId }) |
        @Html.ActionLink("Delete", "DeleteData", new { id = item.BookId }, new { onclick = "return confirm('Are sure wants to delete?');" })
    </td>
</tr>
}

</table>
