@model IEnumerable<CRUD_cutomerApp.Models.Customer>
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.add)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.bdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mailid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.add)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mailid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.customerId })
                @Html.ActionLink("Delete", "Delete", new { id = item.customerId })
            </td>
        </tr>
    }

</table>
<!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>